"""
Environment configuration file
Copy to .env and fill in your API keys
"""

# LLM Configuration
LLM_PROVIDER=openai  # options: openai, gemini
OPENAI_API_KEY=
GEMINI_API_KEY=

# Weaviate Configuration
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=

# NebulaGraph Configuration
NEBULA_HOST=localhost
NEBULA_PORT=3699
NEBULA_USER=root
NEBULA_PASSWORD=nebula
NEBULA_SPACE=extraction_db

# Application Settings
LOG_LEVEL=INFO
DEBUG=False

# OCR Settings
# If Tesseract isn't on PATH, set this to the full path to tesseract.exe
TESSERACT_CMD=

# OCR scanned PDFs (fallback when normal PDF text extraction is empty)
ENABLE_PDF_OCR=0
PDF_OCR_LANG=eng
PDF_OCR_MAX_PAGES=10
PDF_OCR_DPI=200
